[Unit]
Description=Apache Archiva
Documentation=https://archiva.apache.org
Requires=network.target
After=network.target

[Service]
Type=forking
EnvironmentFile=/etc/default/archiva
ExecStart=/opt/archiva/archiva/bin/archiva start
ExecStop=/opt/archiva/archiva/bin/archiva stop
SuccessExitStatus=143
Restart=on-failure
User=archiva
Group=archiva

[Install]
WantedBy=multi-user.target
